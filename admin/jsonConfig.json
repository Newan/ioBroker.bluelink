{
    "type": "panel",
    "i18n": true,
    "items": {
        "header_Start": {
            "type": "header",
            "text": "bluelink adapter settings",
            "size": 2
        },

        "_documentationLink": {
            "type": "staticLink",
            "label": "Token-documentation",
            "button": true,
            "href": "https://github.com/Newan/ioBroker.bluelink/tree/master/py",
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "style": {
                "fontSize": 18,
                "marginTop": 0
            }
        },
        "Account settings": {
            "type": "header",
            "text": "Account settings",
            "size": 2,
            "newLine": true
        },
        "brand": {
            "newLine": true,
            "type": "select",
            "label": "Brand",
            "xs": 12,
            "sm": 12,
            "md": 4,
            "lg": 3,
            "xl": 3,
            "options": [
                {
                    "label": "Kia",
                    "value": "kia"
                },
                {
                    "label": "Hyundai",
                    "value": "hyundai"
                }
            ]
        },
        "motor": {
            "type": "select",
            "label": "Motor",
            "xs": 12,
            "sm": 12,
            "md": 4,
            "lg": 3,
            "xl": 3,
            "options": [
                {
                    "label": "EV",
                    "value": "EV"
                },
                {
                    "label": "PHEV/MHEV",
                    "value": "HEV"
                },
                {
                    "label": "Diesel/Benzin",
                    "value": "GAS"
                }
            ]
        },
        "batteryRange": {
            "type": "number",
            "label": "max km Range",
            "help": "only for PHEV",
            "hidden": "data.motor === 'EV' || data.motor === 'GAS'",
            "unit": "km",
            "xs": 12,
            "sm": 12,
            "md": 4,
            "lg": 3,
            "xl": 3
        },
        "language": {
            "newLine": true,
            "type": "select",
            "label": "App Lang",
            "xs": 12,
            "sm": 12,
            "md": 4,
            "lg": 3,
            "xl": 3,
            "options": [
                {
                    "label": "DE",
                    "value": "de"
                },
                {
                    "label": "EN",
                    "value": "en"
                },
                {
                    "label": "NL",
                    "value": "nl"
                },
                {
                    "label": "IT",
                    "value": "it"
                },
                {
                    "label": "ES",
                    "value": "es"
                },
                {
                    "label": "PL",
                    "value": "pl"
                }
            ]
        },
        "username": {
            "type": "text",
            "label": "Username",
            "xs": 12,
            "sm": 12,
            "md": 4,
            "lg": 3,
            "xl": 3
        },
        "client_secret_pin": {
            "type": "password",
            "label": "Pin",
            "xs": 12,
            "sm": 12,
            "md": 4,
            "lg": 3,
            "xl": 3
        },
        "client_secret": {
            "newLine": true,
            "type": "password",
            "label": "Password_Token",
            "repeat": false,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 5,
            "xl": 5
        },
        "Api settings": {
            "type": "header",
            "text": "Api settings",
            "size": 2,
            "newLine": true
        },
        "evHistory": {
            "type": "checkbox",
            "label": "Receive Daily drive History (EV cars only, needs 3 request per day)",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 8,
            "lg": 4,
            "xl": 4
        },
        "protectAgainstDeepDischarge": {
            "type": "checkbox",
            "label": "Stop refresh if 12V battery is under 10.5 V to protect against irreversible damage",
            "xs": 12,
            "sm": 12,
            "md": 8,
            "lg": 4,
            "xl": 4
        },
        "request": {
            "type": "text",
            "label": "Request max 400",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 8,
            "lg": 3,
            "xl": 3
        },
        "errorCounter": {
            "type": "text",
            "label": "errorCounter",
            "xs": 12,
            "sm": 12,
            "md": 8,
            "lg": 3,
            "xl": 3
        },
        "resAddress": {
            "type": "checkbox",
            "label": "Resolve the address from coordinates using openstreetmap",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 8,
            "lg": 4,
            "xl": 4
        }
    }
}
